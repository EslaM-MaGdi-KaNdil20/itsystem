function Avatar({ name, avatar, size = 6 }) {
  if (avatar) return <img src={avatar} className={`w-${size} h-${size} rounded-full object-cover`} alt={name} />;
  const initials = name?.split(' ').slice(0, 2).map(w => w[0]).join('').toUpperCase() || '?';
  const colors = ['bg-purple-500', 'bg-blue-500', 'bg-green-500', 'bg-orange-500', 'bg-pink-500', 'bg-teal-500'];
  const color = colors[name?.charCodeAt(0) % colors.length] || 'bg-gray-400';
  return (
    <div className={`w-${size} h-${size} rounded-full ${color} flex items-center justify-center text-white font-bold`}
      style={{ fontSize: size * 2 }}>
      {initials}
    </div>
  );
}

function formatDate(d) {
  if (!d) return null;
  const date = new Date(d);
  const today = new Date(); today.setHours(0, 0, 0, 0);
  const diff = Math.ceil((date - today) / 86400000);
  if (diff < 0) return { text: `Ù…ØªØ£Ø®Ø± ${Math.abs(diff)} ÙŠÙˆÙ…`, cls: 'text-red-600 font-semibold' };
  if (diff === 0) return { text: 'Ø§Ù„ÙŠÙˆÙ…', cls: 'text-orange-600 font-semibold' };
  if (diff <= 3) return { text: `Ø¨Ø¹Ø¯ ${diff} Ø£ÙŠØ§Ù…`, cls: 'text-yellow-600' };
  return { text: date.toLocaleDateString('ar-EG', { day: 'numeric', month: 'short' }), cls: 'text-gray-500' };
}

// â”€â”€â”€ Task Card â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
function TaskCard({ task, index, onOpen, onDelete }) {
  const p = PRIORITY[task.priority] || PRIORITY.medium;
  const due = formatDate(task.due_date);
  return (
    <Draggable draggableId={`task-${task.id}`} index={index}>
      {(provided, snapshot) => (
        <div
          ref={provided.innerRef}
          {...provided.draggableProps}
          {...provided.dragHandleProps}
          onClick={() => onOpen(task)}
          className={`bg-white rounded-xl border border-gray-200 p-3 mb-2 cursor-pointer shadow-sm hover:shadow-md transition-all select-none
            ${snapshot.isDragging ? 'shadow-xl rotate-1 opacity-90 border-blue-300' : ''}`}
        >
          {/* Priority badge */}
          <div className="flex items-start justify-between gap-2 mb-2">
            <span className={`text-xs px-2 py-0.5 rounded-full font-medium ${p.cls}`}>
              {p.icon} {p.label}
            </span>
            <button
              onClick={(e) => { e.stopPropagation(); onDelete(task.id); }}
              className="text-gray-300 hover:text-red-500 transition opacity-0 group-hover:opacity-100 text-xs"
            >
              âœ•
            </button>
          </div>

          {/* Title */}
          <p className={`text-sm font-semibold text-gray-700 leading-snug mb-2 line-clamp-2 ${task.status === 'done' ? 'line-through text-gray-400' : ''}`}>
            {task.title}
          </p>

          {/* Footer */}
          <div className="flex items-center justify-between mt-2">
            <div className="flex items-center gap-1">
              {task.assigned_to_name ? (
                <div className="flex items-center gap-1.5" title={task.assigned_to_name}>
                  <Avatar name={task.assigned_to_name} avatar={task.assigned_to_avatar} size={5} />
                  <span className="text-xs text-gray-500 hidden sm:block truncate max-w-[80px]">{task.assigned_to_name.split(' ')[0]}</span>
                </div>
              ) : (
                <span className="text-xs text-gray-400 italic">ØºÙŠØ± Ù…Ø¹ÙŠÙ†</span>
              )}
            </div>
            {due && (
              <span className={`text-xs flex items-center gap-1 ${due.cls}`}>
                ğŸ“… {due.text}
              </span>
            )}
          </div>
        </div>
      )}
    </Draggable>
  );
}

