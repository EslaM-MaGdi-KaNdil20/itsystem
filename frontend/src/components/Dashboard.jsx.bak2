const DonutChart = ({ data }) => {
  const total = data.reduce((acc, item) => acc + item.value, 0);
  let currentAngle = 0;
  
  if (total === 0) {
    return (
      <div className="relative w-48 h-48 rounded-full bg-gray-50 flex items-center justify-center border-2 border-dashed border-gray-200">
        <span className="text-gray-400 text-sm">Ù„Ø§ ØªÙˆØ¬Ø¯ Ø¨ÙŠØ§Ù†Ø§Øª</span>
      </div>
    );
  }

  const gradientSegments = data.map(item => {
    const percentage = (item.value / total) * 100;
    const angle = (percentage / 100) * 360;
    if (angle === 0) return null;
    const endAngle = currentAngle + angle;
    const str = `${item.color} ${currentAngle}deg ${endAngle}deg`;
    currentAngle = endAngle;
    return str;
  }).filter(Boolean).join(', ');

  return (
    <div className="relative w-48 h-48 group">
      <div 
        className="rounded-full w-full h-full transform -rotate-90 transition-transform duration-700 ease-out hover:scale-105"
        style={{ background: `conic-gradient(${gradientSegments})` }}
      />
      <div className="absolute inset-0 m-auto w-32 h-32 bg-white rounded-full flex items-center justify-center flex-col shadow-sm">
         <span className="text-3xl font-bold text-gray-800">{total}</span>
