  const colors = [
    'bg-indigo-500',
    'bg-sky-500',
    'bg-teal-500',
    'bg-violet-500',
    'bg-pink-500'
  ];
  return colors[index % colors.length];
};

const HeroStat = ({ label, value, sub, subColor = 'text-indigo-300', icon, onClick, highlight }) => (
  <motion.button
    whileHover={{ scale: 1.04 }}
    whileTap={{ scale: 0.97 }}
    onClick={onClick}
    className={`relative text-right p-4 rounded-2xl border transition-all cursor-pointer w-full ${
      highlight
        ? 'bg-red-500/10 border-red-400/30 hover:bg-red-500/20'
        : 'bg-white/5 border-white/10 hover:bg-white/10'
    }`}
  >
    {highlight && (
      <span className="absolute top-2 left-2 flex h-2.5 w-2.5">
        <span className="animate-ping absolute inline-flex h-full w-full rounded-full bg-red-400 opacity-75"></span>
        <span className="relative inline-flex rounded-full h-2.5 w-2.5 bg-red-500"></span>
      </span>
    )}
    <div className="text-2xl mb-2">{icon}</div>
    <div className="text-3xl font-extrabold text-white leading-none mb-1">{value.toLocaleString('ar-EG')}</div>
    <div className="text-xs text-slate-400 font-semibold mb-1">{label}</div>
    <div className={`text-xs font-bold ${subColor}`}>{sub}</div>
  </motion.button>
);
